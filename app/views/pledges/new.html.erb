<h2 class="text-center">Hello <%= current_donor.first_name %>!</h2>

<div class="container pledge">
  <div class="row">
    <div class="col-md-6">
      <h1 class="dashboard-title" data-id="<%= @campaign.id %>"><%= @campaign.name %></h1>
      <h4>Campaign Description</h4>
      <div class="campaign-description"><p><%= @campaign.description %> </p></div>
      <div class="org-box">
        <h4>Organization</h4>
        <div class="org-name"><p><%= @campaign.organization.name  %></p></div>
        <h4>Where are we located?</h4>
        <div class="org-location"><p><%=@campaign.organization.city %>, <%= @campaign.organization.state  %></p></div>
      </div>
    </div>

    <div class="requested-items col-md-3">
      <div class="requested-items-title"><h2>Requested Items</h2></div>
      <div class="requested-items-total">$0.00</div>
      <p>Click Requested Item to Pledge</p>
      <div class="requested-items-list"></div>
    </div>

    <div class="pledged-items col-md-3">
      <div class="pledged-items-title text-center"><h2>You Pledged</h2></div>
      <div class="pledged-items-total">$0.00</div>
      <p>Click Item to remove</p>
      <div class="pledged-items-list"></div>
      <div><a href="#" class="btn btn-primary submit" id="pledged-items-submit">Submit Pledges</a></div>
    </div>

  </div>
  <script type="text/javascript">var registry = <%= @request_model_data_json || '""'.html_safe %></script>
</div>

