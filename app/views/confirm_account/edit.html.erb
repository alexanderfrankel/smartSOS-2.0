<div class="password">
  <%= form_tag confirm_account_path(@org.account_confirmation_token), method: :patch do %>
  <p>
    <%= label_tag :password %> <br>
    <%= text_field_tag :password, params[:password], class: "form-control" %>
  </p>
  <p>
    <%= label_tag :password_confirmation %> <br>
    <%= text_field_tag :password_confirmation, params[:password], class: "form-control" %>
  </p>
  <%= submit_tag(value = "Submit", class:'btn btn-info btn-sm') %>  
  <% end %>
</div>